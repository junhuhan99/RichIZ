<UserControl x:Class="RichIZ.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RichIZ.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">
    <UserControl.DataContext>
        <vm:ReportViewModel/>
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="리포트 및 통계" Style="{StaticResource TitleStyle}"/>

            <!-- 기간 선택 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="조회 기간:" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,0,20,0"/>
                    <ComboBox SelectedItem="{Binding SelectedYear}" Width="100" Height="35" FontSize="14" Margin="0,0,10,0">
                        <ComboBoxItem Content="2024"/>
                        <ComboBoxItem Content="2025" IsSelected="True"/>
                        <ComboBoxItem Content="2026"/>
                    </ComboBox>
                    <TextBlock Text="년" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <ComboBox SelectedItem="{Binding SelectedMonth}" Width="80" Height="35" FontSize="14" Margin="0,0,10,0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="7"/>
                        <ComboBoxItem Content="8"/>
                        <ComboBoxItem Content="9"/>
                        <ComboBoxItem Content="10" IsSelected="True"/>
                        <ComboBoxItem Content="11"/>
                        <ComboBoxItem Content="12"/>
                    </ComboBox>
                    <TextBlock Text="월" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Button Content="조회" Command="{Binding LoadChartDataCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- 월별 수입/지출 추이 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="월별 수입 추이" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                    <lvc:CartesianChart Series="{Binding IncomeSeries}" Height="300"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="월별 지출 추이" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                    <lvc:CartesianChart Series="{Binding ExpenseSeries}" Height="300"/>
                </StackPanel>
            </Border>

            <!-- 카테고리별 지출 분포 -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="Bold" Margin="0,0,0,20">
                        <Run Text="카테고리별 지출 분포 ("/>
                        <Run Text="{Binding SelectedYear}"/>
                        <Run Text="년 "/>
                        <Run Text="{Binding SelectedMonth}"/>
                        <Run Text="월)"/>
                    </TextBlock>
                    <lvc:PieChart Series="{Binding CategoryPieSeries}" Height="400"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
