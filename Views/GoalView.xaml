<UserControl x:Class="RichIZ.Views.GoalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RichIZ.ViewModels">
    <UserControl.DataContext>
        <vm:GoalViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="🎯 재무 목표 관리" Style="{StaticResource TitleStyle}"/>

        <!-- 입력 폼 -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="목표 이름" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,10,10">
                    <TextBlock Text="목표 금액" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding TargetAmount, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,10">
                    <TextBlock Text="현재 금액" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding CurrentAmount, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="목표 날짜" Style="{StaticResource LabelStyle}"/>
                    <DatePicker SelectedDate="{Binding TargetDate}" Height="35" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,10,10">
                    <TextBlock Text="카테고리" Style="{StaticResource LabelStyle}"/>
                    <ComboBox SelectedItem="{Binding SelectedCategory}" Height="35" FontSize="14">
                        <ComboBox.Items>
                            <ComboBoxItem Content="비상금" Tag="Emergency"/>
                            <ComboBoxItem Content="주택구매" Tag="House"/>
                            <ComboBoxItem Content="자동차" Tag="Car"/>
                            <ComboBoxItem Content="교육" Tag="Education"/>
                            <ComboBoxItem Content="노후대비" Tag="Retirement"/>
                            <ComboBoxItem Content="휴가" Tag="Vacation"/>
                            <ComboBoxItem Content="기타" Tag="Other" IsSelected="True"/>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,10">
                    <TextBlock Text="설명" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="목표 추가" Command="{Binding AddGoalCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="진행률 업데이트" Command="{Binding UpdateProgressCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="삭제" Command="{Binding DeleteGoalCommand}" Style="{StaticResource DangerButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 목표 목록 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="목표 목록" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Goals}" SelectedItem="{Binding SelectedGoal}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="목표" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="카테고리" Binding="{Binding Category}" Width="100"/>
                        <DataGridTextColumn Header="목표 금액" Binding="{Binding TargetAmount, StringFormat='{}{0:N0}원'}" Width="120"/>
                        <DataGridTextColumn Header="현재 금액" Binding="{Binding CurrentAmount, StringFormat='{}{0:N0}원'}" Width="120"/>
                        <DataGridTextColumn Header="달성률" Binding="{Binding Progress, StringFormat='{}{0:N1}%'}" Width="100"/>
                        <DataGridTextColumn Header="목표일" Binding="{Binding TargetDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                        <DataGridTextColumn Header="남은 일수" Binding="{Binding DaysRemaining}" Width="100"/>
                        <DataGridCheckBoxColumn Header="완료" Binding="{Binding IsCompleted}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
