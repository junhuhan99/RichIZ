<UserControl x:Class="RichIZ.Views.BudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RichIZ.ViewModels">
    <UserControl.DataContext>
        <vm:BudgetViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0" Text="예산 관리" Style="{StaticResource TitleStyle}"/>

        <!-- 요약 -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" Background="#E3F2FD">
                <StackPanel>
                    <TextBlock Text="총 예산" FontSize="14" Foreground="#7F8C8D"/>
                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="#2196F3">
                        <Run Text="{Binding TotalBudget, StringFormat='{}{0:N0}'}"/>
                        <Run Text="원" FontSize="16"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0" Background="#FFEBEE">
                <StackPanel>
                    <TextBlock Text="총 지출" FontSize="14" Foreground="#7F8C8D"/>
                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="#E74C3C">
                        <Run Text="{Binding TotalSpent, StringFormat='{}{0:N0}'}"/>
                        <Run Text="원" FontSize="16"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="10,0,0,0" Background="#E8F5E9">
                <StackPanel>
                    <TextBlock Text="잔여 예산" FontSize="14" Foreground="#7F8C8D"/>
                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="#27AE60">
                        <Run Text="{Binding Remaining, StringFormat='{}{0:N0}'}"/>
                        <Run Text="원" FontSize="16"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 입력 폼 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="카테고리" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding Category}" Height="35" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,10,0">
                    <TextBlock Text="예산 금액" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding BudgetAmount, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10,0,10,0">
                    <TextBlock Text="기간" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox SelectedItem="{Binding SelectedYear}" Width="80" Height="35" FontSize="14" Margin="0,0,5,0">
                            <ComboBoxItem Content="2024"/>
                            <ComboBoxItem Content="2025" IsSelected="True"/>
                            <ComboBoxItem Content="2026"/>
                        </ComboBox>
                        <TextBlock Text="년" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox SelectedItem="{Binding SelectedMonth}" Width="60" Height="35" FontSize="14" Margin="0,0,5,0">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="9"/>
                            <ComboBoxItem Content="10" IsSelected="True"/>
                            <ComboBoxItem Content="11"/>
                            <ComboBoxItem Content="12"/>
                        </ComboBox>
                        <TextBlock Text="월" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                    <Button Content="설정" Command="{Binding AddBudgetCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 예산 목록 -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="카테고리별 예산 현황" FontSize="18" FontWeight="Bold"/>
                    <Button Content="새로고침" Command="{Binding LoadBudgetsCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="20,0,0,0" Padding="10,5"/>
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding BudgetItems}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="카테고리" Binding="{Binding Category}" Width="*"/>
                        <DataGridTextColumn Header="예산" Binding="{Binding BudgetAmount, StringFormat='{}{0:N0}원'}" Width="150"/>
                        <DataGridTextColumn Header="지출" Binding="{Binding SpentAmount, StringFormat='{}{0:N0}원'}" Width="150"/>
                        <DataGridTextColumn Header="잔여" Binding="{Binding Remaining, StringFormat='{}{0:N0}원'}" Width="150"/>
                        <DataGridTemplateColumn Header="진행률" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding PercentageUsed}" Maximum="100" Height="20">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Foreground" Value="#27AE60"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PercentageUsed, Converter={StaticResource GreaterThanConverter}, ConverterParameter=80}" Value="True">
                                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding PercentageUsed, Converter={StaticResource GreaterThanConverter}, ConverterParameter=50}" Value="True">
                                                            <Setter Property="Foreground" Value="#F39C12"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                        <TextBlock Text="{Binding PercentageUsed, StringFormat='{}{0:N1}%'}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontWeight="Bold" Foreground="White"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
