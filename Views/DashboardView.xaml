<UserControl x:Class="RichIZ.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RichIZ.ViewModels">
    <UserControl.DataContext>
        <vm:MainViewModel/>
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="대시보드" Style="{StaticResource TitleStyle}"/>

            <!-- 요약 카드들 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 총 자산 -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="총 자산" FontSize="16" Foreground="#7F8C8D" Margin="0,0,0,10"/>
                        <TextBlock FontSize="32" FontWeight="Bold" Foreground="#2ECC71">
                            <Run Text="{Binding TotalAssets, StringFormat='{}{0:N0}'}"/>
                            <Run Text="원" FontSize="20"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 이번 달 수입 -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="이번 달 수입" FontSize="16" Foreground="#7F8C8D" Margin="0,0,0,10"/>
                        <TextBlock FontSize="32" FontWeight="Bold" Foreground="#3498DB">
                            <Run Text="{Binding MonthlyIncome, StringFormat='{}{0:N0}'}"/>
                            <Run Text="원" FontSize="20"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 이번 달 지출 -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="이번 달 지출" FontSize="16" Foreground="#7F8C8D" Margin="0,0,0,10"/>
                        <TextBlock FontSize="32" FontWeight="Bold" Foreground="#E74C3C">
                            <Run Text="{Binding MonthlyExpense, StringFormat='{}{0:N0}'}"/>
                            <Run Text="원" FontSize="20"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 투자 자산 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="투자 자산 가치" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock FontSize="28" FontWeight="Bold" Foreground="#9B59B6">
                        <Run Text="{Binding InvestmentValue, StringFormat='{}{0:N0}'}"/>
                        <Run Text="원" FontSize="18"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- 안내 메시지 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0" Background="#E8F5E9">
                <StackPanel>
                    <TextBlock Text="환영합니다!" FontSize="18" FontWeight="Bold" Foreground="#27AE60" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#2C3E50">
                        좌측 메뉴에서 다양한 기능을 사용하실 수 있습니다:<LineBreak/>
                        • 수입/지출: 일상적인 거래 기록 관리<LineBreak/>
                        • 투자 포트폴리오: 주식, 펀드 등 투자 자산 추적<LineBreak/>
                        • 예산 관리: 월별 예산 설정 및 진행 상황 모니터링<LineBreak/>
                        • 리포트: 차트와 그래프로 자산 현황 시각화
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
