<UserControl x:Class="RichIZ.Views.InvestmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RichIZ.ViewModels">
    <UserControl.DataContext>
        <vm:InvestmentViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0" Text="투자 포트폴리오" Style="{StaticResource TitleStyle}"/>

        <!-- 요약 정보 -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0" Background="#E8F5E9">
                <StackPanel>
                    <TextBlock Text="총 투자금" FontSize="14" Foreground="#7F8C8D"/>
                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="#27AE60">
                        <Run Text="{Binding TotalInvested, StringFormat='{}{0:N0}'}"/>
                        <Run Text="원" FontSize="16"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0" Background="#E3F2FD">
                <StackPanel>
                    <TextBlock Text="현재 가치" FontSize="14" Foreground="#7F8C8D"/>
                    <TextBlock FontSize="24" FontWeight="Bold" Foreground="#2196F3">
                        <Run Text="{Binding TotalCurrentValue, StringFormat='{}{0:N0}'}"/>
                        <Run Text="원" FontSize="16"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="손익" FontSize="14" Foreground="#7F8C8D"/>
                    <TextBlock FontSize="24" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TotalProfitLoss, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TotalProfitLoss, Converter={StaticResource GreaterThanZeroConverter}}" Value="False">
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <Run Text="{Binding TotalProfitLoss, StringFormat='{}{0:N0}'}"/>
                        <Run Text="원" FontSize="16"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 입력 폼 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 이름 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="자산명" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <!-- 유형 -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,10,10">
                    <TextBlock Text="유형" Style="{StaticResource LabelStyle}"/>
                    <ComboBox SelectedItem="{Binding SelectedType}" Height="35" FontSize="14">
                        <ComboBox.Items>
                            <ComboBoxItem Content="주식" Tag="Stock" IsSelected="True"/>
                            <ComboBoxItem Content="펀드" Tag="Fund"/>
                            <ComboBoxItem Content="채권" Tag="Bond"/>
                            <ComboBoxItem Content="암호화폐" Tag="Crypto"/>
                            <ComboBoxItem Content="부동산" Tag="RealEstate"/>
                            <ComboBoxItem Content="기타" Tag="Other"/>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>

                <!-- 수량 -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,10">
                    <TextBlock Text="수량" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <!-- 매입 가격 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="매입 가격" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding PurchasePrice, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <!-- 현재 가격 -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,10,10">
                    <TextBlock Text="현재 가격" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding CurrentPrice, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <!-- 매입일 -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,10">
                    <TextBlock Text="매입일" Style="{StaticResource LabelStyle}"/>
                    <DatePicker SelectedDate="{Binding PurchaseDate}" Height="35" FontSize="14"/>
                </StackPanel>

                <!-- 버튼들 -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="추가" Command="{Binding AddInvestmentCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="가격 업데이트" Command="{Binding UpdatePriceCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="삭제" Command="{Binding DeleteInvestmentCommand}" Style="{StaticResource DangerButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 투자 목록 -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="보유 자산" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Investments}" SelectedItem="{Binding SelectedInvestment}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="자산명" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="유형" Binding="{Binding Type}" Width="100"/>
                        <DataGridTextColumn Header="수량" Binding="{Binding Quantity, StringFormat='{}{0:N2}'}" Width="100"/>
                        <DataGridTextColumn Header="매입가" Binding="{Binding PurchasePrice, StringFormat='{}{0:N0}'}" Width="100"/>
                        <DataGridTextColumn Header="현재가" Binding="{Binding CurrentPrice, StringFormat='{}{0:N0}'}" Width="100"/>
                        <DataGridTextColumn Header="총 투자금" Binding="{Binding TotalInvested, StringFormat='{}{0:N0}원'}" Width="120"/>
                        <DataGridTextColumn Header="현재 가치" Binding="{Binding CurrentValue, StringFormat='{}{0:N0}원'}" Width="120"/>
                        <DataGridTextColumn Header="손익" Binding="{Binding ProfitLoss, StringFormat='{}{0:N0}원'}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ProfitLoss, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ProfitLoss, Converter={StaticResource GreaterThanZeroConverter}}" Value="False">
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="수익률" Binding="{Binding ReturnRate, StringFormat='{}{0:N2}%'}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
