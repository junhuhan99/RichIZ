<UserControl x:Class="RichIZ.Views.AIView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RichIZ.ViewModels">
    <UserControl.DataContext>
        <vm:AIViewModel/>
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="🤖 AI 분석 센터" Style="{StaticResource TitleStyle}"/>

            <!-- 분석 버튼 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="전체 AI 분석 실행" Command="{Binding AnalyzeAllCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" Padding="30,15" FontSize="16"/>
                    <TextBlock Text="분석 중..." VerticalAlignment="Center" Margin="20,0,0,0"
                               FontSize="14" Foreground="#F39C12"
                               Visibility="{Binding IsAnalyzing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- 투자 포트폴리오 분석 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📈 투자 포트폴리오 AI 분석" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding PortfolioAnalysis}" FontFamily="Consolas"
                                   FontSize="13" TextWrapping="Wrap" Foreground="#2C3E50"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 소비 패턴 분석 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="💳 소비 패턴 AI 분석" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding SpendingAnalysis}" FontFamily="Consolas"
                                   FontSize="13" TextWrapping="Wrap" Foreground="#2C3E50"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 예산 최적화 추천 -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="💰 예산 최적화 AI 추천" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <ScrollViewer MaxHeight="250" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding BudgetRecommendation}" FontFamily="Consolas"
                                   FontSize="13" TextWrapping="Wrap" Foreground="#2C3E50"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 종합 재무 추천 -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="🎯 종합 재무 AI 추천" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding FinancialRecommendation}" FontFamily="Consolas"
                                   FontSize="13" TextWrapping="Wrap" Foreground="#2C3E50"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
